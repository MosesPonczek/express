doctype html

mixin item(title, url)
  li
    a(href=url class=path == url ? 'active' : '')=title

html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    ul(class="menu")
      +item('Strona główna', '/')
      +item('Quiz', '/quiz')
      +item('Aktualności', '/news')
      +item('Admin', '/admin')
    

    block content
